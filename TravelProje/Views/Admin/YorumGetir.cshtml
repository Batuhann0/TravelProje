@model TravelProje.Models.Sınıflar.Yorumlar
@{
    ViewBag.Title = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>YORUM GÜNCELLE</h2>

@using (Html.BeginForm("YorumGüncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control", @readonly = "readonly" })

    <br />

    @Html.LabelFor(x => x.Kullanici)
    @Html.TextBoxFor(x => x.Kullanici, new { @class = "form-control" })

    <br />

    @Html.LabelFor(x => x.Mail)
    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })

    <br />


    @Html.LabelFor(x => x.Yorum)
    @Html.TextAreaFor(x => x.Yorum, 10, 1, new { @class = "form-control" })

    <br />


    @Html.LabelFor(x => x.BlogId)
    @Html.TextBoxFor(x => x.BlogId, new { @class = "form-control" })

    <br />

    <button style="width:200px" class="btn btn-info">YORUM GÜNCELLE</button>
}
